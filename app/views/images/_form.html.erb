<div>
  <%= form_for [@gallery, @image] do |form| %>
    <%= render "error_messages", target: @image %>
    <%= form.label :url, "URL" %>
    <%= form.text_field :url %>
    <%= form.collection_check_boxes :tag_ids, @tags, :id, :name %>
    <%= form.submit "Select tags" %>
  <% end %>
</div>

<div>
  <%= form_for [@image, @tag] do |form| %>
    <%= form.label :name, "New tag name" %>
    <%= form.text_field :name %>
    <%= form.submit "Add new tag option" %>
<% end %>
</div>
